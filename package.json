{
  "name": "no-spoiler-service",
  "version": "1.0.7",
  "description": "serverless api for no-spoilers.net",
  "author": "Geoffrey Emerson <geoffrey.emerson.git@gmail.com>",
  "license": "UNLICENSED",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/No-Spoilers/no-spoiler-service.git"
  },
  "scripts": {
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "test": "NODE_ENV=test c8 -r text-summary npm run test:base",
    "test:coverage": "c8 --check-coverage npm run test:base",
    "test:base": "mocha test/**/*.test.js -r dotenv/config",
    "test:e2e": "newman run postman_tests.json -e postman_environment.dev.json",
    "test:watch": "mocha test/**/*.test.js -r dotenv/config --watch",
    "dev": "NODE_ENV=development sls offline start",
    "build": "sls package",
    "deploy": "sls deploy",
    "deploy:prod": "sls deploy --stage prod",
    "remove": "sls remove",
    "info": "sls info",
    "logs": "sls logs -f",
    "sls:deploy": "sls deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.859.0",
    "@middy/core": "6.4.1",
    "@middy/http-cors": "6.4.1",
    "@middy/http-error-handler": "6.4.1",
    "@middy/http-event-normalizer": "6.4.1",
    "@middy/http-json-body-parser": "6.4.1",
    "@middy/validator": "6.4.1",
    "bcryptjs": "3.0.2",
    "dotenv": "17.2.1",
    "http-errors": "2.0.0",
    "jsonwebtoken": "9.0.2"
  },
  "devDependencies": {
    "@eslint/js": "9.32.0",
    "@types/chai": "5.2.2",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-mock": "6.2.1",
    "c8": "10.1.3",
    "chai": "5.2.1",
    "eslint": "9.32.0",
    "globals": "16.3.0",
    "mocha": "11.7.1",
    "newman": "^6.2.0",
    "nyc": "17.1.0",
    "serverless": "^4.17.2"
  }
}
