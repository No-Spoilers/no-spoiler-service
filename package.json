{
  "name": "no-spoiler-service",
  "version": "1.0.7",
  "description": "serverless api for no-spoilers.net",
  "author": "Geoffrey Emerson <geoffrey.emerson.git@gmail.com>",
  "license": "UNLICENSED",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/No-Spoilers/no-spoiler-service.git"
  },
  "scripts": {
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "build:ts": "tsc",
    "build:clean": "rm -rf dist",
    "build": "pnpm run build:clean && pnpm run build:ts && sls package",
    "test": "NODE_ENV=test c8 -r text-summary pnpm run test:base",
    "test:coverage": "c8 --check-coverage pnpm run test:base",
    "test:base": "pnpm run build:ts && mocha --require dotenv/config dist/test/**/*.test.js",
    "test:e2e": "newman run postman_tests.json -e postman_environment.dev.json",
    "test:watch": "pnpm run build:ts && mocha --require dotenv/config dist/test/**/*.test.js --watch",
    "dev": "NODE_ENV=development sls offline start",
    "deploy": "sls deploy",
    "deploy:prod": "sls deploy --stage prod",
    "remove": "sls remove",
    "info": "sls info",
    "logs": "sls logs -f",
    "sls:deploy": "sls deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.873.0",
    "@middy/core": "6.4.3",
    "@middy/http-cors": "6.4.3",
    "@middy/http-error-handler": "6.4.3",
    "@middy/http-event-normalizer": "6.4.3",
    "@middy/http-json-body-parser": "6.4.3",
    "@middy/validator": "6.4.3",
    "bcryptjs": "3.0.2",
    "dotenv": "17.2.1",
    "http-errors": "2.0.0",
    "jsonwebtoken": "9.0.2"
  },
  "devDependencies": {
    "@eslint/js": "9.34.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/chai": "5.2.2",
    "@types/http-errors": "^2.0.5",
    "@types/json-schema": "^7.0.15",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-mock": "6.2.1",
    "c8": "10.1.3",
    "chai": "6.0.1",
    "eslint": "9.34.0",
    "globals": "16.3.0",
    "mocha": "11.7.1",
    "newman": "^6.2.1",
    "nyc": "17.1.0",
    "serverless": "^4.18.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
