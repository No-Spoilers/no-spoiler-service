{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-trailing-spaces": "error",
        "quote-props": ["error", "as-needed"],
        "quotes": ["error", "single"],
        "no-var": "error",
        "prefer-const": "error",
        "comma-style": "error",
        "object-curly-spacing": ["error", "always"],
        "indent": ["error", 2, { "SwitchCase": 1 }]
    }
}